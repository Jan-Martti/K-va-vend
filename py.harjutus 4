import random

#ruudu tabel
print(f"Arv Ruut Kuup")
for i in range(1,11):
    print(f"{i:4} {i**2:4} {i**3:4}")





#pank
konto = 10000
intress = 0.05
periood = 5

for i in range(1,periood+1):
    print(f"{i} {round(konto,2)} {round(konto*intress,2)} {round(konto+konto*intress,)}")
    konto = konto+konto*intress
print(f"Konto seis: {round(konto,2)}")
print(f"Kasum:{round(konto-10000,2)}")


print()
#arvamismäng

loop = 1
skoor = 0
while loop==1:
    suvarv = random.randint(1,10)
    print(suvarv)
    for i in range(3):
        valik = int(input("Vali arv 1-10: "))
        if valik == suvarv:
            print("WINNER")
            break
        else:
            print("WRONG!")
    loop = int(input("Veel (1/0)? "))
print("GAME OVER")
print(f"Skoor {skoor}")




#viisikud
for i in range(1,101):
    if i%5==0:
        print(i)




